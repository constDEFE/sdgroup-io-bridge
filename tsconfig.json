{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2016",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["ES2015", "DOM"],
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
